<!DOCTYPE html>
<html lang="en">
<head>
    <title>My Cart</title>
</head>
<body>
    <h2>Shopping Cart</h2>

    <% if (cart.length === 0) { %>
        <p>Your cart is empty.</p>
    <% } else { %>
        <table border="1">
            <tr>
                <th>Product Name</th>
                <th>Price</th>
            </tr>
            <% cart.forEach(item => { %>
                <tr>
                    <td><%= item.product.productName %></td>
                    <td>â‚¹<%= item.priceAtAddition %></td>
                </tr>
            <% }) %>
        </table>

        <!-- Pay Now Button -->
        <form action="/checkout" method="POST">
            <button type="submit">Pay Now</button>
        </form>
    <% } %>
</body>
</html>
