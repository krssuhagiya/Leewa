<!DOCTYPE html>
<html lang="en">
<%-include('partials/head')%>
<body class="px-16 tracking-wide bg-[#FAF8F0] text-[#1e1e19] font-[Montserrat]">
    <%-include('partials/topbar')%>
    <%-include('partials/navbar')%>

    <!-- Wedding Section -->
    <h2 class="text-2xl font-semibold tracking-wide text-gray-800 text-center mt-28">
        Eternal Elegance, Timeless Love
    </h2>

    <!-- Explore Section -->
    <div class="explore -mx-16 flex flex-col md:flex-row w-screen mt-5">
        <!-- Bride Section -->
        <div class="relative w-full md:w-1/2 h-[90vh] overflow-hidden group">
            <img src="./img/bridel.webp" alt="" class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105">
            <div class="absolute inset-0 bg-black/40 flex flex-col items-center justify-center text-white text-center">
                <h2 class="text-3xl font-bold uppercase">For the Bride</h2>
                <p class="text-lg mt-2 cursor-pointer hover:underline"><a href="/bride">Explore</a></p>
            </div>
        </div>

        <!-- Groom Section -->
        <div class="relative w-full md:w-1/2 h-[90vh] overflow-hidden group">
            <img src="./img/groom.webp" alt="" class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105">
            <div class="absolute inset-0 bg-black/40 flex flex-col items-center justify-center text-white text-center">
                <h2 class="text-3xl font-bold uppercase">For the Groom</h2>
                <p class="text-lg mt-2 cursor-pointer hover:underline"><a href="/groom">Explore</a></p>
            </div>
        </div>
    </div>

    <!-- Categories Section -->
    <div class="categories tracking-widest my-16">
        <h2 class="text-center text-3xl pb-4">SHOP BY CATEGORY</h2>
        <div class="category grid grid-cols-2 md:grid-cols-4 gap-6 px-24">
            <% let categories = [
                { img: 'cat1.jpg', name: 'SAREES' },
                { img: 'cat2.jpg', name: 'LEHENGA SETS' },
                { img: 'cat3.jpg', name: 'KURTA SET' },
                { img: 'cat4.jpg', name: 'MENS KURTA' }
            ]; %>

            <% categories.forEach(category => { %>
            <div class="card h-[55vh] w-[80%] md:w-[17vw] text-center transition">
                <img src="./img/<%= category.img %>" alt="<%= category.name %>" class="w-full h-[95%] object-cover transition-transform duration-300 hover:scale-105">
                <p class="text-xs py-2"><%= category.name %></p>
            </div>
            <% }); %>
        </div>
    </div>

    <%-include('partials/appointment')%>
    <%-include('partials/footer')%>
    <script src="/js/script.js"></script>
</body>
</html>
